<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Fishes</title>

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.5/examples/album/"
    />

    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include('common/header') %>

    <div class="container">
      <% if (message) { %>
        <div class = "row">
        <div class="alert alert-success" role="alert">
        <%= message %>
      </div>
      <% } %>
    </div>
      <div class="row col-md-12 col-md-offset-2 custyle mx-auto">

      <a href="/create-fish/"><button type="button" class="btn btn-primary">Create a new fish</button></a> 
      
      <h1 class="mx-auto">Fishes</h1>

      <table class="table table-striped custab">
        <thead>
          <tr>
            <th>Name</th>
            <th>#</th>
            <th>Selling price</th>
            <th>Shadow size</th>
          </tr>

          <% fishes.forEach(fish => { %>

          <tr>
            
            <td><%= fish.Name %></td>
            <td><%= fish.Number %></td>
            <td><%= fish.Sell %></td>
            <td><%= fish.Shadow %></td>

            <td class="text-center">
              <a href="/fishes/update/<%= fish.id %>" class="btn btn-info btn-xs"
                ><span class="glyphicon glyphicon-edit"></span> Edit</a
              >
              <a href="/fishes/delete/<%= fish.id %>" class="btn btn-danger btn-xs"
                ><span class="glyphicon glyphicon-remove"></span> Del</a
              >
            </td>
          </tr>

          <% }); %>
        </thead>
      </table>
    </div>
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="tastings?page=1&limit=10">1</a></li>
        <li class="page-item"><a class="page-link" href="tastings?page=2&limit=10">2</a></li>
        <li class="page-item"><a class="page-link" href="tastings?page=3&limit=10">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
      </ul>
    </nav>
    <%- include('common/footer') -%>
  </body>
</html>
